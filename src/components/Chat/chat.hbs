<div class="chat {{#if isActiveChat}}chat-active{{/if}}" data-id="{{id}}">
  <div class="chat__profile">
    <div class="chat__profile-image">
      {{{defaultAvatarIcon}}}
    </div>
    <div class="chat__profile-info">
      <div class="chat__profile-info__name">{{first_name}}</div>
      <div class="chat__profile-info__message">{{last_message.content}}</div>
    </div>
  </div>
  <div class="chat__details">
    <span class="chat__details-time">
      {{{last_message.time}}}
    </span>
    {{#if count}}
      <div class="chat__details-badge">
        {{{count}}}
      </div>
    {{/if}}
  </div>
</div>