<div class="profiles">
  <aside class="profiles__sidebar">
    <div class="profiles__sidebar__header">
      {{{back}}}
    </div>
    <div class="profiles__sidebar__list">
      {{#each profiles}}
        {{{this}}}
      {{/each}}
    </div>
    <div class="profiles__sidebar__add">
      <span>Добавить профиль</span>
    </div>
  </aside>

  <main class="profiles__info">
    <div class="profiles__info-avatar">
      {{{defaultAvatar}}}
    </div>
    <div class="profiles__info-name">
      {{first_name}}
    </div>
    {{{profileLayout}}}
  </main>
</div>